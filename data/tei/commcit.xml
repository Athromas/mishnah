        <body>
            <ab xml:id="comcit.dummy">
                <app>
                    <lem type="com"/>
                    <rdg wit="ABC">
                        <ref ana="#MelSh"/>
                    </rdg>
                </app>
            </ab>
            <ab xml:id="comcit.4.2.2.1">
                <app from="ref.xml#ref.4.2.2.1.41" to="ref.xml#ref.4.2.2.1.43">
                    <lem type="com"/>
                    <rdg wit="#YAshk #Rosh">–––<bibl><ref ana="#MelSh">דברי ר״מ</ref><ref ana="#TYT"
                                >דברי ר״מ</ref></bibl></rdg>
                    <rdg wit="#Karo #RMBM">דברי רבי מאיר<bibl><ref ana="#MelSh">דברי
                            ר״מ</ref></bibl></rdg>
                </app>
            </ab>
            <ab xml:id="commcit.4.2.2.4">
                <app from="ref.xml#ref.4.2.2.4.23">
                    <!-- Not sure lem is essential, but including it for now -->
                    <lem type="com"/>
                    <rdg>רבי יהודה אומר הלוקח<wit corresp=" #Unattr"/><bibl><ref ana="#MelSh">הלוקח
                                פירות</ref></bibl></rdg>
                </app>
            </ab>
            <ab xml:id="commcit.4.2.2.6">
                <app from="ref.xml#ref.4.2.2.6.16">
                    <lem type="com"/>
                    <rdg>שלשה<wit corresp="#MelSh"/><bibl><ref ana="#MelSh">שלשה
                        רגלים</ref></bibl></rdg>
                </app>
            </ab>
            <ab xml:id="commcit.4.2.2.8">
                <app from="ref.xml#ref.4.2.2.8.17">
                    <lem type="com"/>
                    <rdg>כתחילה<wit corresp="#MelS"/><bibl><ref ana="#MelS">גוללן</ref></bibl></rdg>
                </app>
                <app from="ref.xml#ref.4.2.2.2.8.15">
                    <lem type="com"/>
                    <rdg>יִלְמַד<wit corresp="#YAshk"/><bibl><ref ana="#MelSh"
                        >גוללן</ref></bibl></rdg>
                    <rdg>יִלַמֵּד<wit corresp="#MelSh"/><bibl><ref ana="#MelSh"
                        >גוללן</ref></bibl></rdg>
                    <!-- Cites two readings, the one according to
                        R. Yehosef.-->
                </app>
                <app from="ref.xml#ref.4.2.2.2.8.53" to="ref.xml#ref.4.2.2.2.8.62">
                    <lem type="com"/>
                    <rdg>מצא שק או קפה אם אין דרכו ליטול<wit corresp="#Rif #Rosh #YAshk"/><bibl><ref
                                ana="#MelSh">מצא שק</ref></bibl></rdg>
                </app>
            </ab>
            <ab xml:id="comcit.4.2.2.9">
                <app>
                    <lem type="com"/>
                    <rdg wit="#Unattr #Rosh #B">–<bibl><ref ana="#MelSh">אלא נותן לו שברו בפועל
                                בטל</ref></bibl></rdg>
                    <rdg wit="#RMBM #Tur">בטל<bibl><ref ana="#MelSh">אלא נותן לו שברו בפועל
                                בטל</ref></bibl></rdg>
                </app>
                <app from="ref.xml#ref.4.2.2.9.57">
                    <lem type="com"/>
                    <rdg wit="#NY #Rif #YAshk">עמו<bibl><ref ana="#MelSh">אם יש שם
                        ב״ד</ref></bibl></rdg>
                </app>
            </ab>
            <ab xml:id="comcit.4.2.2.10">
                <app from="ref.xml#ref.4.2.2.10.12">
                    <lem type="com"/>
                    <rdg wit=" #Unattr">בית<bibl><ref ana="#MelSh">אם היתה בבית
                        הקברות</ref></bibl></rdg>
                    <rdg wit=" #Unattr">בין<bibl><ref ana="#MelSh">אם היתה בבית
                        הקברות</ref></bibl></rdg>
                </app>
            </ab>
            <ab xml:id="comcit.4.2.2.11">
                <app from="ref.xml#ref.4.2.2.11.31" to="ref.xml#ref.4.2.2.11.33">
                    <lem type="com"/>
                    <rdg wit="#RMBM-c"> ואם היה אביו שקול כנגד רבו<bibl><ref ana="#MelSh">ואם היה
                                אביו שקול כנגד רבו</ref><ref ana="#TYT">ואם אביו
                        חכם</ref></bibl></rdg>
                    <rdg wit="#RMBM-c">ואם אביו חכם<ref ana="#TYT">ואם אביו חכם</ref></rdg>
                </app>
                <app from="ref.xml#ref.4.2.2.11.65" to="ref.xml#ref.4.2.2.11.68">
                    <lem type="com"/>
                    <rdg wit="#Y #Rosh #Rif">ואם היה אביו חכם<bibl><ref ana="#MelSh">ואם היה אביו
                                שקול כנגד רבו</ref></bibl></rdg>
                    <rdg wit="#TYT">––––<bibl><ref ana="#TYT">היה אביו או רבו נושאין משאוי
                                וכו׳</ref></bibl></rdg>
                </app>
                <app from="ref.xml#ref.4.2.2.11.69" to="ref.xml#ref.4.2.2.11.76">
                    <lem type="com"/>
                    <rdg wit="#TYT">––––<bibl><ref ana="#TYT">היה אביו או רבו נושאין משאוי
                                וכו׳</ref></bibl></rdg>
                </app>
            </ab>
