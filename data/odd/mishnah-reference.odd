    <text>
        <body>
            <div>
                <head>Project Documentation</head>
                <p>To be added</p>
            </div>
            <div>
                <head>TEI Customizations for the Digital MISHNAH reference file</head>
                <p>The prefix in this schema stands for <expan>Digital MISHNAH reference</expan>,
                    the reference text used for aligning the various witnesses to the Mishnah.</p>
            </div>
            <div>
                <schemaSpec ident="digital_mishnah_reference" prefix="mishnahr" start="TEI">
                    <!-- Required modules, these need to be restricted further to get rid of unused elements -->
                    <moduleRef key="tei"/>
                    <moduleRef key="header"/>
                    <moduleRef key="core"/>
                    <moduleRef key="textstructure"/>
                    
                    <!-- Additional modules needed for collation -->
                    <moduleRef key="textcrit"/>
                    <moduleRef key="linking" include="ab anchor link"/>
                    
                    <!-- Including <w> for recording tokenization -->
                    <elementRef key="w"/>
                    
                    <!-- Including this class to permit use of @ana -->
                    <classRef key="att.global.analytic"/>
                    
                    <!-- Removing unwanted classes; Suggest not using numbered divs in reference text for explicit division-->
                    <classSpec module="textstructure" ident="model.div1Like" type="model" mode="delete"/>
                    <classSpec module="textstructure" ident="model.div2Like" type="model" mode="delete"/>
                    <classSpec module="textstructure" ident="model.div3Like" type="model" mode="delete"/>
                    <classSpec module="textstructure" ident="model.div4Like" type="model" mode="delete"/>
                    <classSpec module="textstructure" ident="model.div5Like" type="model" mode="delete"/>
                    <classSpec module="textstructure" ident="model.div6Like" type="model" mode="delete"/>
                    <classSpec module="textstructure" ident="model.div7Like" type="model" mode="delete"/>
                    
                </schemaSpec>
            </div>
        </body>
    </text>
</TEI>
